	PROCEDURE Init
		Lparameters ntotal,nidcliente,ctdoc,ctipovta,cplacas
		If MuestraDctos1('','ld1')=0 Then
			Return .F.
		Endif
		With This
			.AddProperty("Formapago",tmpv.Forma)
			.AddProperty("TipoVta",Iif(Vartype(ctipovta)='C',ctipovta,""))
			.tdoc=""
			.cmbdcto.RowSource="Select nomb,tdoc,idtdoc from ld1 where tdoc in ('01','03','20') into cursor ldctos order by tdoc "
			If nidcliente>0 Then
				If MuestraClientesX('',3,nidcliente,"lp")<1 Then
					.txtcodigo.Value=0
					.txtrazon.Value=""
					.txtdireccion.Value=""
					.txtciudad.Value=""
					.txtruc.Value=""
					.txtdni.Value=""
				Else
					This.mostrardatoscliente()
					This.cmbdcto.Enabled= .F.
					This.cmbdcto.ListIndex=Iif(ctdoc='01',1,Iif(ctdoc='03',2,3))
					This.tdoc=ctdoc
					This.cmbdcto.LostFocus()
					This.txtserie.LostFocus()
					This.txtnumero.LostFocus
					This.txtreferencia.SetFocus
				Endif
			Else
				.cmbdcto.ListIndex=1
				.tdoc=ldctos.tdoc
				.cmbdcto.SetFocus
			Endif
